<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/itemListFragment">

    <fragment
        android:id="@+id/itemListFragment"
        android:name="com.example.luckydraw.fragment.ItemListFragment"
        android:label="Main Fragment" >
        <action
            android:id="@+id/to_raffle"
            app:destination="@+id/raffleFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>

    <fragment
        android:id="@+id/raffleFragment"
        android:name="com.example.luckydraw.fragment.RaffleFragment"
        android:label="Raffle Fragment" />
</navigation>
